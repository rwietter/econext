{
  "name": "ecoleta",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --ignore-watch node_modules .\\src\\server.ts",
    "lint": "eslint '* / ** / *. {js, ts, tsx}' --quiet --fix",
